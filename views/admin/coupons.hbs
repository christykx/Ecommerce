<head>
<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css"/>
</head>

<section>
<div class="container">
    <div class="col-md-12 mt-4" style="text-align:end">
    <a href ="/admin/add-coupons" class="btn btn-success">Add Coupons</a>
    </div>
 </div>
</section>

<section> 
    {{!-- style="background-image:url(https://thumbs.dreamstime.com/b/blue-green-yellow-gradient-background-watercolor-texture-abstract-artistic-grungy-web-design-backdrop-brochure-165710792.jpg); background-repeat: no-repeat; background-size: cover;"> --}}
<div class="container">
    <div class="col-md-12 text-right mt-4 "> 
 <table id="table_id" class="table mt-5 " >
  <thead style="color:black">
    <tr>
       <th scope="col">S.No.</th> 
      <th scope="col">Coupon</th>
      <th scope="col">Discount amount</th>
      <th scope="col">Starting Date</th>
      <th scope="col">Expiry Date</th>
      <th scope="col">Options</th>

    </tr>
  </thead>
  <tbody>
   {{#each offer}}
    <tr>
       <td class="sno">1</td> 
      <td>{{this.coupon}}</td>
      <td>{{this.discount_price}}</td>
      <td>{{this.starting_date}}</td>
      <td>{{this.expiry_date}}</td>


      {{!-- <td><a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a> --}}
    <td>
      <div class="d-flex justify-content-evenly">
      <div><a href="/admin/cancel-offer/{{this._id}}"class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.coupon}}?')">Delete</a></div>

      {{#if this.block}}
      <div><a class="btn btn-success text-white p-2" href="/admin/offer-unblock/{{this._id}}">Enable</a></div>
       {{else}}    
      <div><a class="btn btn-danger" href="/admin/offer-block/{{this._id}}">Disable</a></div>
      {{/if}}

      </div>
      </td>
    </tr>   
   {{/each}}
   </tbody>
   </table>
   </div>
 </div>
</section> 


<style>

  table.dataTable tr.odd,table.dataTable tr.even{
    background-color: #cff4fc;
  }

table.dataTable tr.odd td.sorting_1,table.dataTable tr.even td.sorting_1{
  background-color: #cff4fc;
}
</style>



<script
type="text/javascript"
charset="utf8"
src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"
></script>
<script
type="text/javascript"
charset="utf8"
src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
<script>
$(function() {
$("#table_id").dataTable({
  "fnRowCallback":function(nRow,aData,iDisplayIndex,iDisplayIndexFull){
    $('td:eq(0)',nRow).html(iDisplayIndexFull+1);
      
 }
})
}) 
 
</script>

